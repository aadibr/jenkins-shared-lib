def cleanWorkspace() {
    echo "Cleaning workspace..."
    deleteDir()
}

def cloneRepo(String repoUrl) {
    echo "Cloning ${repoUrl}"
    git url: repoUrl
}

def buildApp() {
    echo "Building application..."
    sh './build.sh'
}

def deployApp() {
    echo "Deploying application..."
    sh './deploy.sh'
}

